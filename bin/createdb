#!/usr/bin/env bash

set -e

DATABASE_NAME="database_development"

USER=database
PGSQL_CONTRIB="/usr/share/postgresql/contrib"

if [ ! -z "$1" ]; then DATABASE_NAME="$1"; fi

createdb -U $USER -O $USER --template template0 --encoding "UTF8" $DATABASE_NAME
psql -U $USER -d $DATABASE_NAME -c "CREATE EXTENSION postgis"
